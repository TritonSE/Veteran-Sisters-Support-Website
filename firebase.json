{
    "hosting": {
      "source": "frontend",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "frameworksBackend": {
        "region": "us-west1"
      },
      "rewrites": [
          {
          "source": "/api/**",
          "function": {
              "functionId": "backend",
              "pinTag": true
          }
          }
      ]
    },
    "functions": [
      {
        "runtime": "nodejs22",
        "source": "backend",
        "codebase": "default",
        "ignore": [
          ".git",
          "firebase-debug.log",
          "firebase-debug.*.log",
          "**/.*",
          "**/node_modules/**"
        ]
      }
    ]
  }